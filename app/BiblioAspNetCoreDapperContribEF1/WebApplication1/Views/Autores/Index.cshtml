@model IEnumerable<WebApplication1.Models.AutorVM>

@{
    ViewData["Title"] = "Autores";
}

<a asp-controller="Home" asp-action="Index">Voltar</a>
<hr />

<h2>Autores</h2>

<hr />
<a asp-controller="Autores" asp-action="Cadastro" asp-route-id="0">Novo</a>
<hr />

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var autor in Model)
        {
            <tr>
                <td>@autor.AutorId</td>
                <td>@autor.Nome</td>
                <td>
                    <a asp-controller="Autores" asp-action="Cadastro" asp-route-id="@autor.AutorId">Alterar</a>
                    <a asp-controller="Autores" asp-action="Excluir" asp-route-id="@autor.AutorId">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>