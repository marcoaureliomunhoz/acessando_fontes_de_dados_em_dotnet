@model AgendaAspNetCoreEF1.Models.Estado

@{
    ViewData["Title"] = "Cadastro de Estado";

    bool somenteLeitura = Model != null && !string.IsNullOrEmpty(Model.UF);
}

<a asp-controller="Estados" asp-action="Index">Voltar</a>
<hr />

<h2>Cadastro de Estado</h2>

@if (ViewBag.problemas != null)
{
    <ul>
        <strong>Atenção:</strong>
        @foreach (string problema in ViewBag.problemas)
        {
            <li>@problema</li>
        }
    </ul>
}

<form method="post">
    <label>UF:</label>
    @if (somenteLeitura)
    {
        <input asp-for="UF" style="width:50px" readonly="readonly" />
    }
    else
    {
        <input asp-for="UF" style="width:50px" />
    }
    <br />
    <label>Nome:</label> <input asp-for="Nome" style="width:250px" /> <br />
    <hr />
    <button type="submit">Salvar</button>
</form>