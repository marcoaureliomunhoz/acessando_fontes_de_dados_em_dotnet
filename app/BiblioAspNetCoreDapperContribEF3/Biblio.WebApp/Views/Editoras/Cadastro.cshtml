@model Biblio.WebApp.Models.EditoraCadVM

@{
    ViewData["Title"] = "Cadastro de Editora";
}

<a asp-controller="Editoras" asp-action="Index">Voltar</a>
<hr />

<h2>Cadastro de Editora</h2>

@if (Model.Problemas != null && Model.Problemas.Count > 0)
{
    <ul>
        <strong>Atenção:</strong>
        @foreach (string problema in Model.Problemas)
        {
            <li>@problema</li>
        }
    </ul>
}

<form method="post">
    <label>ID:</label> <input asp-for="EditoraId" style="width:50px" readonly="readonly" /> <br />
    <label>Nome:</label> <input asp-for="Nome" style="width:300px" /> <br />
    <hr />
    <button type="submit">Salvar</button>
</form>

@if (Model.Livros != null && Model.Livros.Count > 0)
{
    <h3>Livros</h3>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Título</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var livro in Model.Livros)
            {
                <tr>
                    <td>@livro.LivroId</td>
                    <td>@livro.Titulo</td>
                </tr>
            }
        </tbody>
    </table>
}