@model IEnumerable<Biblio.DomainApp.Entidades.Livro>

@{
    ViewData["Title"] = "Livros";
}

<a asp-controller="Home" asp-action="Index">Voltar</a>
<hr />

<h2>Livros</h2>

<hr />
<a asp-controller="Livros" asp-action="Cadastro" asp-route-id="0">Novo</a>
<hr />

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Editora</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var livro in Model)
        {
        <tr>
            <td>@livro.LivroId</td>
            <td>@livro.Titulo</td>
            <td>@(livro.Editora?.Nome ?? "")</td>
            <td>
                <a asp-controller="Livros" asp-action="Cadastro" asp-route-id="@livro.LivroId">Alterar</a>
                <a asp-controller="Livros" asp-action="Excluir" asp-route-id="@livro.LivroId">Excluir</a>
            </td>
        </tr>
        }
    </tbody>
</table>