@model Biblio.WebApp.Models.LivroAutorCadVM

@{
    ViewData["Title"] = "Vínculo de Autoria";
}

<a asp-controller="Livros" asp-action="Cadastro" asp-route-id="@Model.LivroId">Voltar</a>
<hr />

<h2>Vínculo de Autoria</h2>

@if (Model.Problemas != null && Model.Problemas.Count > 0)
{
    <ul>
        <strong>Atenção:</strong>
        @foreach (string problema in Model.Problemas)
        {
            <li>@problema</li>
        }
    </ul>
}


Livro: <strong>@Model.Titulo</strong>

<form method="post">
    <input type="hidden" asp-for="LivroId" />
    <input type="hidden" asp-for="Titulo" />

    Autores: <br />

    @for (int i = 0; i < Model.Autores.Count(); i++)
    {
        <input asp-for="Autores[i].Selected" type="checkbox" />
        <label asp-for="Autores[i].AutorId">@Model.Autores[i].Nome</label> <br />
        <input type="hidden" asp-for="Autores[i].AutorId" />
        <input type="hidden" asp-for="Autores[i].Nome" />
    }

    <hr />
    <button type="submit">Salvar</button>
</form>