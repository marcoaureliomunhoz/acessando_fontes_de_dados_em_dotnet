@model IEnumerable<WebApp.Models.EditoraVM>

@{
    ViewData["Title"] = "Editoras";
}

<a asp-controller="Home" asp-action="Index">Voltar</a>
<hr />

<h2>Editoras</h2>

<hr />
<a asp-controller="Editoras" asp-action="Cadastro" asp-route-id="0">Nova</a>
<hr />

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var editora in Model)
        {
            <tr>
                <td>@editora.EditoraId</td>
                <td>@editora.Nome</td>
                <td>
                    <a asp-controller="Editoras" asp-action="Cadastro" asp-route-id="@editora.EditoraId">Alterar</a>
                    <a asp-controller="Editoras" asp-action="Excluir" asp-route-id="@editora.EditoraId">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>