@model WebApp.Models.AutorCadVM

@{
    ViewData["Title"] = "Cadastro de Autor";
}

<a asp-controller="Autores" asp-action="Index">Voltar</a>
<hr />

<h2>Cadastro de Autor</h2>

@if (Model.Problemas != null)
{
    <ul>
        <strong>Atenção:</strong>
        @foreach (string problema in Model.Problemas)
        {
            <li>@problema</li>
        }
    </ul>
}

<form method="post">
    <label>ID:</label> <input asp-for="AutorId" style="width:50px" readonly="readonly" /> <br />
    <label>Nome:</label> <input asp-for="Nome" style="width:300px" /> <br />
    <hr />
    <button type="submit">Salvar</button>
</form>
