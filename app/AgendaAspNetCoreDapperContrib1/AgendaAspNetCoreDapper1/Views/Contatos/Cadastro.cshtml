@model AgendaAspNetCoreDapper1.Models.Contato

@{
    ViewData["Title"] = "Cadastro de Contato";

    bool somenteLeitura = Model != null && Model.ContatoId > 0;
}

<a asp-controller="Contatos" asp-action="Index">Voltar</a>
<hr />

<h2>Cadastro de Contato</h2>

@if (ViewBag.problemas != null)
{
    <ul>
        <strong>Atenção:</strong>
        @foreach (string problema in ViewBag.problemas)
        {
            <li>@problema</li>
        }
    </ul>
}

    <form method="post">
        <input type="hidden" asp-for="ContatoId" />
        <label>Nome:</label> <input asp-for="Nome" style="width:250px" /> <br />
        <label>Valor:</label> <input asp-for="Valor" style="width:250px" /> <br />
        <label>UF:</label>
        @if (ViewBag.Estados != null)
        {
            <select asp-for="UF">
                @foreach (AgendaAspNetCoreDapper1.Models.Estado estado in ViewBag.Estados)
                {
                    <option value="@estado.UF">@estado.Nome</option>
                }
            </select>
        }
        else
        {
            <input asp-for="UF" style="width:50px" />
        }
        <br />
        <hr />
        <button type="submit">Salvar</button>
    </form>